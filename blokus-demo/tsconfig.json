{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			]
		},
		"rootDirs": [
			".",
			"./.svelte-kit/types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext",
    "allowImportingTsExtensions": true
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./.svelte-kit/types/**/$types.d.ts",
		"./.svelte-kit/vite.config.js",
		"./vite.config.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"./tests/**/*.js",
		"./tests/**/*.ts",
		"./tests/**/*.svelte"
	],
	"exclude": [
		"./node_modules/**",
		"./src/service-worker.js",
		"./src/service-worker/**/*.js",
		"./src/service-worker.ts",
		"./src/service-worker/**/*.ts",
		"./src/service-worker.d.ts",
		"./src/service-worker/**/*.d.ts"
	]
}